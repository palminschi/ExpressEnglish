<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="40dp"
    android:layout_marginVertical="5dp"
    >

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                tools:text="1. She arrived in ____ USA last night."
                android:textColor="@color/black_3"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Она прибыла в США эту ночь"
                android:layout_marginHorizontal="15dp"/>
            <LinearLayout
                android:id="@+id/choice1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/style_rounded_border">

                    <ImageView
                        android:id="@+id/imgTrue1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:contentDescription="@null"
                        android:src="@drawable/img_checked"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgFalse1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:contentDescription="@null"
                        android:src="@drawable/img_false"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tvA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@color/gray_05"
                        android:textSize="15sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textChoice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:text="in"
                    android:textColor="@color/gray_05"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/style_rounded_border">

                    <ImageView
                        android:id="@+id/imgTrue2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:contentDescription="@null"
                        android:src="@drawable/img_checked"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgFalse2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:contentDescription="@null"
                        android:src="@drawable/img_false"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="B"
                        android:textColor="@color/gray_05"
                        android:textSize="15sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textChoice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:text="at"
                    android:textColor="@color/gray_05"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/style_rounded_border">

                    <ImageView
                        android:id="@+id/imgTrue3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:contentDescription="@null"
                        android:src="@drawable/img_checked"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgFalse3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:contentDescription="@null"
                        android:src="@drawable/img_false"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvC"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="C"
                        android:textColor="@color/gray_05"
                        android:textSize="15sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textChoice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:text="on"
                    android:textColor="@color/gray_05"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>